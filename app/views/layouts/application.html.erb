<!DOCTYPE html>
<html>
<head>
  <title>Housekeeping</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="app">
  
	<!-- Navbars -->
	<div class="navbar navbar-app navbar-absolute-top">
		<div class="navbar-brand navbar-brand-center" yield-to="title">
			<span>Housekeeping</span>
		</div>

		<div class="btn-group pull-left">
			<div ng-click="toggle('mainSidebar')" class="btn btn-navbar sidebar-toggle">
		  		<i class="fa fa-bars"></i>
			</div>
		</div>
	</div>

	<div class="navbar navbar-app navbar-absolute-bottom">
		<% if user_signed_in? %>
			<div class="btn-group justified">
				<a href="#/route1" class="btn btn-navbar btn-icon-only">
					<span>My Appts</span>
					<i class="fa fa-home fa-navbar"></i>
				</a>
				<a href="#/route2" class="btn btn-navbar btn-icon-only">
					<span>Show Available</span>
					<i class="fa fa-list fa-navbar"></i>
				</a>
			</div>
		<% end %>
	</div>

	<div class="main-body">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<%= yield %>
	<div>

</div>

</body>
</html>